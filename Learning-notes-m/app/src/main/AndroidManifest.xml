<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zengcanxiang.learning_notes_m">

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <!-- 相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 文件权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 通讯录权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <!-- 传感器 -->
    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <!--地址GPS-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--录音权限-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!--短信-->
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!--电话-->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!--日程-->
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".finger_mark.FingerMarkActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".permission.DangerPermissionListActivity" />
        <activity android:name=".permission.CameraPermissionActivity" />
        <activity android:name=".permission.StoragePermissionActivity" />
        <activity android:name=".permission.ContactsPermissionActivity" />
        <activity android:name=".permission.SensorsPermissionActivity" />
        <activity android:name=".permission.LocationPermissionActivity" />
        <activity android:name=".permission.AudioActivity" />
        <activity android:name=".permission.AudioPermissionActivity" />
        <activity android:name=".permission.SMSPermissionActivity" />
        <activity android:name=".permission.CallPhonePermissionActivity" />
        <activity android:name=".permission.CalendarPermissionActivity"/>
    </application>

</manifest>